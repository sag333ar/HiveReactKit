{
  "name": "hive-react-kit",
  "private": false,
  "version": "0.2.3",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./build.css": "./dist/build.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "hive",
    "blockchain",
    "ui",
    "components",
    "shadcn",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sag333ar/hive-react-kit.git"
  },
  "author": "Sagar",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist dist-app && mkdir -p dist dist-app",
    "build": "tsc -p tsconfig.build.json && vite build --mode lib && tsc --project tsconfig.build.json && npx @tailwindcss/cli -i src/build.css -o dist/build.css --content 'src/**/*.{ts,tsx}'",
    "build:app": "vite build",
    "build:lib": "tsc -p tsconfig.build.json && vite build --mode lib && tsc --project tsconfig.build.json && npx @tailwindcss/cli -i src/build.css -o dist/build.css --content 'src/**/*.{ts,tsx}'",
    "build:all": "npm run clean && npm run build:lib && npm run build:app",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "npm run build:app && npx serve dist-app",
    "serve:lib": "npm run build:lib && npx serve dist",
    "serve:all": "npm run build:all && npx serve dist-app"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@hiveio/content-renderer": "^2.3.1",
    "@hiveio/dhive": "^1.3.2",
    "@hookform/resolvers": "^3.10.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.6.0",
    "hls.js": "^1.6.13",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.462.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.61.1",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^2.1.9",
    "react-router-dom": "^6.30.1",
    "sonner": "^1.7.4",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.1.10"
  }
}
